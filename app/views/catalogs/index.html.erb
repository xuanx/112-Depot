<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.Listing catalogs') %></h1>

<table>

  <% while !@catalogs.empty? %>
    <tr>
      <% catalog = @catalogs.shift %>
      <% @catalogs = catalog.children + @catalogs %>
      <% catalog.depth.times do %>
        <td></td>
      <% end %>

      <td><%= catalog.name %></td>
      <td><%= link_to t('.Show'), catalog %></td>
      <td><%= link_to t('.Edit'), edit_catalog_path(catalog) %></td>
      <td><%= link_to t('.Destroy'), catalog, :confirm => t('.Are you sure'), :method => :delete %></td>
      <td><%= link_to(t('.New Child'),{:controller=>"catalogs",:action=>"new",:pid=>catalog.name }) %></td>
    </tr>

  <% end %>
</table>

<br />

<%= link_to t('.New Catalog'), {:controller=>"catalogs",:action=>"new",:pid=>"root" } %>
