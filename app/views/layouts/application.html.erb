<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <!-- START: stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
  <!-- END:stylesheet -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
</head>
<body id="store">
  <div id="banner">
    <%= form_tag store_path, :class => 'locale' do %>
      <%= select_tag 'set_locale',
          options_for_select(LANGUAGES, I18n.locale.to_s),
          :onchange => 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
    <% end %>

    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %><!-- <label  id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
        <% end %>
      <% end %>
      <a href="http://www...."><%= t('.home') %></a><br />
      <a href="http://www..../faq"><%= t('.questions') %></a><br />
      <a href="http://www..../news"><%= t('.news') %></a><br />
      <a href="http://www..../contact"><%= t('.contact') %></a><br />

      <% if session[:user_id] %>
        <br />
        <%= link_to t('.Orders'), orders_path %><br />
        <% if User.find_by_id(session[:user_id]).role == 0 %>
          <%= link_to t('.Products'), products_path %><br />
          <%= link_to t('.Users'), users_path %><br />
          <%= link_to t('.Catalogs'), catalogs_path %><br />
        <% end %>
        <br />
        <%= button_to t('.Logout'), logout_path, :method => :delete %>
      <% end %>
    </div>

    <div id="main">
      <%= yield %>
    </div>

    <div id="side_right">
      <% catalogs = Catalog.find_all_by_pid("root") %>
      <% while !catalogs.empty? %>
        <span>+
          <% catalog = catalogs.shift %>
          <% catalogs = catalog.children + catalogs %>
          <% catalog.depth.times do %>
            -- 
          <% end %>

          <%= link_to "#{catalog.name}", store_path(:catalog => catalog.name) %>
        </span> <br/>

      <% end %>
    </div>

    <div id="space"></div>

  </div>

</body>
</html>
