<h1><%= t('.Listing orders') %></h1>

<table>
  <tr>
    <th><%= t('.Name') %></th>
    <th><%= t('.Address') %></th>
    <th><%= t('.Email') %></th>
    <th><%= t('.Pay type') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to t('.Show'), order %></td>
    <td><%= link_to t('.Edit'), edit_order_path(order) %></td>
    <td><%= link_to t('.Destroy'), order, :confirm => t('.Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.New Order'), new_order_path %>

<%=will_paginate(@orders, :prev_label=>'Previous', :next_label=>'Next', :separator=>" | ") %>