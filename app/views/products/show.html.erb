<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1>
  <b>Title:</b>
  <%= @product.title %>
</h1>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Image url:</b>
  <%= @product.image_url %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<h3>Comments:</h3>
<% @product.comments.each do |comment| %>
	<p>
    Commented <%= time_ago_in_words(comment.created_at)%>
     <br/>
     <%= comment.content %>
  </p>
<% end %>


<%= form_for [@product, Comment.new] do |f| %>
  <p>
    <%= f.label :content, "New comment:"%><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Add comment"%>
  </p>
<% end %>


<br />
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>



